<!--miniprogram/pages/appoint/appoint.wxml-->

<view class="_title">
  <text>请填写预约信息</text>
</view>


<van-cell-group>
  <van-field
    bindchange="inputXueyuan"
    icon="hotel-o"
    value="{{ xueyuan }}"
    clearable
    label=""
    placeholder="  请输入所在学院"
    required
  />

<van-field
icon="friends-o"
    bindchange="inputNianji"
    value="{{ nianji }}"
    required
    clearable
    label=""
    placeholder="  请输入所在年级"
  />
<view class="_title">
  <text>选择就诊病类：</text>
</view>
  <radio-group class='radio-group' bindchange="radioChange">
    <radio  class='radio' style='margin-left: 11px;' wx:for-items="{{diseases}}" wx:key="num" value="{{item.num}}" checked="{{item.checked}}">
    <text class="radioLab" style='margin-left: 0px;'>{{item.value}}</text>
    </radio>
</radio-group>


  <van-field
    bindchange="inputMsg"
    value="{{ message }}"
    label="病症描述："
    type="textarea"
    placeholder="如：头疼、流鼻涕、呕吐等"
    autosize
    border="{{ true }}"
  />
 

<van-cell label="预约时间" icon=clock-o" arrow-direction="down" is-link bind:click="showPopup" />




<van-button type="primary"  color="#66CDAA" round="true" class="center">确认预约</van-button>
<van-popup
  show="{{ show }}"
  closeable
  position="bottom"
  bind:close="onClose"
>
<van-picker columns="{{ columns }}" bind:change="onChange" />
</van-popup>

</van-cell-group>